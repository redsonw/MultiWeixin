<Window
    x:Class="MultiWeixin.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultiWeixin"
    xmlns:log="clr-namespace:MultiWeixin.Assist"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="#FFEAEAEA"
    Loaded="Window_Loaded"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    ThemeMode="None"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">

    <Grid ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Orientation="Horizontal">
            <Image
                Margin="10,5,3,5"
                Source="pack://application:,,,/MultiWeixin;component/Rescource/Images/icon_512x512.png"
                Stretch="UniformToFill" />
            <TextBlock
                Margin="0,0"
                VerticalAlignment="Center"
                Text="微信多开工具" />
        </StackPanel>
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Width="47"
            Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            BorderThickness="0"
            Command="{Binding CloseAppCommand}"
            Content="&#xe711;"
            FontFamily="{StaticResource SymbolThemeFontFamily}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C42B1C" />
                                        <Setter Property="Foreground" Value="#C0FFFFFF" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#C43E30" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <Border
            x:Name="LoggerBorder"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,15,15"
            Padding="5"
            Background="#FFEAEAEA"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="0"
                    Opacity="0.1"
                    RenderingBias="Quality"
                    ShadowDepth="0"
                    Color="#000000" />
            </Border.Effect>

            <ListBox
                x:Name="logListBox"
                Focusable="False"
                ItemsSource="{Binding LogEntrys}"
                Style="{StaticResource LogListBoxStyle}" />

        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,0,15"
            Padding="10,0,10,10"
            CornerRadius="10">
            <!--<Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Direction="0"
                    Opacity="0.1"
                    RenderingBias="Quality"
                    ShadowDepth="0"
                    Color="#000000" />
            </Border.Effect>-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Margin="15,10,15,15"
                    Padding="10"
                    Background="#FFEAEAEA"
                    CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Direction="0"
                            Opacity="0.1"
                            RenderingBias="Quality"
                            ShadowDepth="0"
                            Color="#000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--<Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>-->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Padding="5"
                            VerticalAlignment="Center"
                            Text="版本信息" />
                        <CheckBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Content="{Binding WeChatVersion}"
                            IsChecked="{Binding WeChatEnabled, Mode=TwoWay}"
                            IsEnabled="False"
                            Style="{StaticResource CustomCheckBoxStyle}"
                            Tag="经典界面" />
                        <CheckBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Content="{Binding WeixinVersion}"
                            IsChecked="{Binding WeixinEnabled, Mode=TwoWay}"
                            IsEnabled="False"
                            Style="{StaticResource CustomCheckBoxStyle}"
                            Tag="全新视觉风格" />
                        <Grid Grid.Row="4" Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Padding="5"
                                Text="功能" />
                            <Button
                                Grid.Row="1"
                                Grid.Column="0"
                                Command="{Binding PatcherCommand}"
                                Style="{StaticResource GradientButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="2,0,5,0"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        Text="&#xe8c8;" />
                                    <TextBlock VerticalAlignment="Center" Text="解除多开" />
                                </StackPanel>
                            </Button>
                            <Button
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="No"
                                IsEnabled="False"
                                Style="{StaticResource GradientButtonStyle}">
                                <StackPanel Cursor="No" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="2,0,5,0"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        Text="&#xe755;" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Text="防止撤回"
                                        ToolTip="永不适配，请给人一个悔过的机会。" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>

                <Border
                    Grid.Row="1"
                    Margin="15,0,15,15"
                    Padding="10"
                    Background="#FFEAEAEA"
                    CornerRadius="10"
                    Opacity="1"
                    Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="5"
                            Direction="0"
                            Opacity="0.1"
                            RenderingBias="Quality"
                            ShadowDepth="0"
                            Color="#000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Padding="5"
                            Text="功能" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            Command="{Binding PatcherCommand}"
                            Style="{StaticResource GradientButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="2,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Text="&#xe8c8;" />
                                <TextBlock VerticalAlignment="Center" Text="解除多开" />
                            </StackPanel>
                        </Button>
                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            Cursor="No"
                            IsEnabled="False"
                            Style="{StaticResource GradientButtonStyle}">
                            <StackPanel Cursor="No" Orientation="Horizontal">
                                <TextBlock
                                    Margin="2,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Text="&#xe755;" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="防止撤回"
                                    ToolTip="永不适配，请给人一个悔过的机会。" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <Border
                    Grid.Row="2"
                    Margin="15,0,15,15"
                    Padding="10"
                    Background="#33FFFFFF"
                    CornerRadius="10"
                    Opacity="1"
                    Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Direction="0"
                            Opacity="0.2"
                            RenderingBias="Quality"
                            ShadowDepth="0"
                            Color="#000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="5,0,0,15"
                            Text="状态" />

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="15,0,15,0"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                Foreground="#FF228B22"
                                Text="&#xe91F;" />
                            <TextBlock VerticalAlignment="Center" Text="可用" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
